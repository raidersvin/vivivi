task.wait(40)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

local Client = ReplicatedStorage:FindFirstChild("Library") and ReplicatedStorage.Library.Client
local SaveModule = require(Client.Save)

-- X√≥a th√¥ng b√°o c≈© n·∫øu c√≥
if PlayerGui:FindFirstChild("CustomNotification") then
    PlayerGui:FindFirstChild("CustomNotification"):Destroy()
end

-- T·∫°o ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CustomNotification"
screenGui.Parent = PlayerGui

-- üõë H√†m ki·ªÉm tra v√† hi·ªÉn th·ªã th√¥ng b√°o
local function checkForItem()
    local inventory = SaveModule.Get()["Inventory"]
    local itemCount = 0

    for class, items in pairs(inventory) do
        for _, item in pairs(items) do
            if item.id == "Solar Pickaxe" then
                itemCount = itemCount + (item._am or 1) -- N·∫øu c√≥ _am th√¨ d√πng, n·∫øu kh√¥ng th√¨ m·∫∑c ƒë·ªãnh l√† 1
            end
        end
    end

    -- N·∫øu t√¨m th·∫•y, c·∫≠p nh·∫≠t th√¥ng b√°o
    if itemCount > 0 then
        -- X√≥a th√¥ng b√°o c≈© (n·∫øu c√≥)
        if screenGui:FindFirstChild("NotificationFrame") then
            screenGui:FindFirstChild("NotificationFrame"):Destroy()
        end

        -- T·∫°o Frame
        local frame = Instance.new("Frame")
        frame.Name = "NotificationFrame"
        frame.Size = UDim2.new(0, 50, 0, 50) -- K√≠ch th∆∞·ªõc c·ªë ƒë·ªãnh
        frame.Position = UDim2.new(1, -60, 0.9, -10) -- CƒÉn s√°t b√™n ph·∫£i
        frame.BackgroundColor3 = Color3.fromRGB(200, 0, 0) -- M√†u ƒë·ªè ƒë·∫≠m
        frame.BorderSizePixel = 2
        frame.Parent = screenGui

        -- T·∫°o TextLabel
        local textLabel = Instance.new("TextLabel")
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- M√†u ch·ªØ tr·∫Øng
        textLabel.Text =  itemCount
        textLabel.TextScaled = true
        textLabel.Parent = frame
    end
end

-- üöÄ Ki·ªÉm tra ngay khi ch·∫°y code
checkForItem()

-- ‚è≥ Ch·∫°y l·∫°i ki·ªÉm tra m·ªói 60 gi√¢y
while true do
    task.wait(60) -- ƒê·ª£i 60 gi√¢y
    checkForItem()
end

