local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
 
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

local eggFolder = Workspace:FindFirstChild("Eggs") -- Đặt đúng tên thư mục chứa trứng
local closestEgg = nil
local minDistance = math.huge

-- Tạo GUI hiển thị thông báo
local function createNotification(text)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = player:FindFirstChild("PlayerGui")

    local coordLabel = Instance.new("TextLabel")
    coordLabel.Size = UDim2.new(0, 300, 0, 50)
    coordLabel.Position = UDim2.new(0, 10, 0, 10) -- Góc trái màn hình
    coordLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    coordLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    coordLabel.TextSize = 20
    coordLabel.Text = text
    coordLabel.Parent = screenGui

    -- Xóa sau 5 giây
    task.wait(5)
    screenGui:Destroy()
end

-- Kiểm tra tất cả trứng trong thư mục "Eggs"
if eggFolder then
    for _, egg in pairs(eggFolder:GetChildren()) do
        if egg:IsA("Model") and egg:FindFirstChild("PrimaryPart") then
            local distance = (humanoidRootPart.Position - egg.PrimaryPart.Position).Magnitude
            if distance < minDistance then
                minDistance = distance
                closestEgg = egg
            end
        end
    end
end

-- Hiển thị thông báo quả trứng gần nhất
if closestEgg then
    createNotification("Trứng gần nhất: " .. closestEgg.Name)
else
    createNotification("Không tìm thấy trứng gần!")
end
